<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane stylesheets="/CSS/css.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Employee.EmployeeDrive">
    <children>
        <HBox prefHeight="40.0" prefWidth="1200.0">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addProduct" text="Dodaj" />
            </children>
        </HBox>
        <TableView fx:id="driveTable" layoutY="40.0" prefHeight="405.0" prefWidth="1200.0">
            <columns>
                <TableColumn fx:id="driveImg" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Obrazek" />
                <TableColumn fx:id="driveName" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Nazwa" />
                <TableColumn fx:id="driveVolume" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="Ilość" />
                <TableColumn fx:id="driveInfo" maxWidth="700.0" minWidth="700.0" prefWidth="700.0" text="Szczegółowe informacje" />
                <TableColumn fx:id="drivePrice" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" styleClass="volumePrice" text="Cena" />
                <TableColumn fx:id="driveDel" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" styleClass="employeeShopButton" text="Usuń" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
