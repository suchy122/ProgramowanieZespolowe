<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginView" styleClass="View1" stylesheets="/CSS/css.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Login.LoginController">
    <children>
        <VBox prefHeight="60.0" prefWidth="400.0" style="-fx-alignment: center;">
            <children>
                <Label text="Logowanie">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox layoutY="60.0" prefWidth="400.0" style="-fx-alignment: top-center;">
            <children>
                <Label text="Login:">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="loginFXML" maxWidth="200.0">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Hasło:">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="passwordFXML" maxWidth="200.0" />
                <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#login" text="Zaloguj!">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <children>
                        <Label text="Jeśli nie posiadasz konta, zarejestruj się!">
                     <HBox.margin>
                        <Insets bottom="20.0" />
                     </HBox.margin></Label>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" text="Rejestracja!">
                     <HBox.margin>
                        <Insets bottom="20.0" />
                     </HBox.margin></Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
