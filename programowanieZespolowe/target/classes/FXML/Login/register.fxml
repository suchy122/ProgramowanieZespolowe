<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="registerView" styleClass="View1" stylesheets="/CSS/css.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Login.RegisterController">
    <children>
        <VBox prefHeight="70.0" prefWidth="400.0" style="-fx-alignment: center;">
            <children>
                <Label text="Rejestracja">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox layoutY="60.0" prefWidth="400.0" style="-fx-alignment: top-center;">
            <children>
                <Label text="Imię:">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="registerName" maxWidth="200.0" />
                <Label text="Nazwisko:">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="registerSurname" maxWidth="200.0" />
                <Label text="Login:">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="registerLogin" maxWidth="200.0">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>
                <Label text="Hasło:">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="registerPassword" maxWidth="200.0" />
                <Label text="Email">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="registerEmail" maxWidth="200.0" />
                <Label text="Numer telefonu">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="registerNumber" maxWidth="200.0" />
            <Label text="Adres zamieszkania">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="registerAddress" maxWidth="200.0" />
                <Button fx:id="registerButton" defaultButton="true" mnemonicParsing="false" onAction="#register" text="Zarejestruj!">
                    <VBox.margin>
                        <Insets bottom="20.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
