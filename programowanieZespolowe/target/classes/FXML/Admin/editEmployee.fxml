<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane styleClass="View1" stylesheets="/CSS/css.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Admin.EditEmployee">
    <children>
        <VBox prefHeight="60.0" prefWidth="400.0" style="-fx-alignment: center;">
            <children>
                <Label text="Edycja pracownika">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox layoutY="60.0" prefWidth="400.0" style="-fx-alignment: center;">
            <children>
                <Label text="Imie">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editEmployeeName" maxWidth="200.0"/>
                <Label text="Nazwisko">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editEmployeeSurname" maxWidth="200.0"/>
                <Label text="Email">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editEmployeeEmail" maxWidth="200.0"/>
                <Label text="Numer telefonu">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editEmployeeNumber" maxWidth="200.0"/>
                <Label text="Login">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editEmployeeLogin" maxWidth="200.0"/>
                <Label text="Pensja">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editEmployeeSalary" maxWidth="200.0"/>
                <Button fx:id="editEmployeeButton" mnemonicParsing="false" onAction="#editEmployee" styleClass="Button1"
                        text="Edytuj pracownika!">
                    <VBox.margin>
                        <Insets bottom="20.0" top="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
