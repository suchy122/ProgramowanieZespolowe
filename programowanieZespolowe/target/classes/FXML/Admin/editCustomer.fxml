<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefWidth="400.0" styleClass="View1" stylesheets="/CSS/css.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Admin.EditCustomer">
    <children>
        <VBox prefHeight="60.0" prefWidth="400.0" style="-fx-alignment: center;">
            <children>
                <Label text="Edycja klienta">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox layoutY="60.0" prefWidth="400.0" style="-fx-alignment: top-center;">
            <children>
                <Label text="ImiÄ™:">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editCustomerName" maxWidth="200.0"/>
                <Label text="Nazwisko:">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editCustomerSurname" maxWidth="200.0"/>
                <Label text="Login:">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editCustomerLogin" maxWidth="200.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </TextField>
                <Label text="Email">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editCustomerEmail" maxWidth="200.0"/>
                <Label text="Numer telefonu">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="editCustomerNumber" maxWidth="200.0"/>
                <Button fx:id="editCustomerButton" defaultButton="true" mnemonicParsing="false" onAction="#editCustomer"
                        styleClass="Button1" text="Edytuj klienta!">
                    <VBox.margin>
                        <Insets bottom="20.0" top="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
